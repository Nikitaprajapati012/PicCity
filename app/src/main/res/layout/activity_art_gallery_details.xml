<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="#f5f0f7"
                                                 android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/includeLayout"
            layout="@layout/header_alist_detail"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_48sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="305dp">

            <ImageView
                android:id="@+id/activity_art_gallery_details_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/ic_placeholder"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp">
                <TextView
                    android:id="@+id/activity_art_gallery_details_txt_Name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="#ff4081"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="Name "
                    android:textSize="@dimen/_10sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_art_gallery_details_txt_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/_10sdp"
                    android:text="description"
                    android:textColor="#ff4081"
                    android:textSize="@dimen/_13sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_art_gallery_details_txt_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_art_gallery_details_txt_description"
                    android:padding="@dimen/_10sdp"
                    android:text="Price"
                    android:textColor="#ff4081"
                    android:textSize="@dimen/_13sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="237dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnContact"
                        android:layout_width="@dimen/_185sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/activity_art_gallery_details_txt_price"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="17dp"
                        android:background="@drawable/btn_shape"
                        android:text="Chat With Priyanka"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="73dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/ivEdit"
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/btnContact"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="0.84"
                        android:src="@drawable/edit"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>