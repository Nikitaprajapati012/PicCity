<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f0f7"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:background="#11ffffff"
        android:weightSum="10"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:padding="@dimen/_1sdp"
            android:id="@+id/iv_product_close"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel"/>


        <TextView
            android:id="@+id/txt_product_more_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="More Info"
            android:textColor="#ff4081"
            android:textSize="@dimen/_13sdp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/txt_product_share"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Share"
            android:textColor="#ff4081"
            android:textSize="@dimen/_13sdp" />



    </LinearLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_35sdp"
        tools:layout_conversion_absoluteHeight="@dimen/_150sdp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10">


                    <ImageView
                        android:id="@+id/activity_art_gallery_details_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_placeholder"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:id="@+id/linearLayout"
                        android:layout_alignParentTop="true"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/activity_art_gallery_details_txt_Name"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:textColor="#ff4081"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="Name "
                            android:textSize="@dimen/_10sdp"/>
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>


            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">




                <FrameLayout
                    android:id="@+id/fragment_product_details_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_290sdp"
                        android:background="#11ffffff">

                        <TextView
                            android:id="@+id/activity_art_gallery_details_txt_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:textColor="#ff4081"
                            android:padding="@dimen/_10sdp"
                            android:text="description"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/activity_art_gallery_details_txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/activity_art_gallery_details_txt_description"
                            android:padding="@dimen/_10sdp"
                            android:text="Price"
                            android:textColor="#ff4081"
                            android:textSize="@dimen/_13sdp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/edit"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_alignBottom="@+id/btnContact"
                            android:id="@+id/ivEdit"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <Button
                            android:text="Chat With Priyanka"
                            android:layout_width="@dimen/_185sdp"
                            android:background="@drawable/btn_shape"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/btnContact"
                            android:layout_below="@+id/activity_art_gallery_details_txt_price"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="17dp" />
                    </RelativeLayout>

                </FrameLayout>

            </android.support.v4.widget.NestedScrollView>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>



</android.support.design.widget.CoordinatorLayout>
