<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f0f7"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:background="#11ffffff"
        android:weightSum="10">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:padding="@dimen/_1sdp"
            android:id="@+id/iv_product_close"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel"/>


        <TextView
            android:id="@+id/txt_product_more_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="More Info"
            android:textColor="#ff4081"
            android:textSize="@dimen/_13sdp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/txt_product_share"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Share"
            android:textColor="#ff4081"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_35sdp"
            tools:layout_conversion_absoluteHeight="@dimen/_150sdp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:contentScrim="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_scrollInterpolator="@android:anim/decelerate_interpolator">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10">


                        <ImageView
                            android:id="@+id/activity_art_gallery_details_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_placeholder"/>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_290sdp"
                    android:fillViewport="true"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="10">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Name"
                            android:id="@+id/activity_art_gallery_details_txt_Name"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_22sdp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/transparent_black"
                            android:textSize="@dimen/_13sdp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:id="@+id/activity_art_gallery_details_txt_price"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/transparent_black"
                            android:textSize="@dimen/_13sdp"
                            android:text="Price"
                            android:layout_marginLeft="@dimen/_22sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:weightSum="2">

                            <Button
                                android:text="Chat With Priyanka"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:background="@drawable/layout_border"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:id="@+id/btnContact" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@drawable/edit"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/ivEdit"
                                 />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

        </RelativeLayout>
        </android.support.design.widget.AppBarLayout>
    </RelativeLayout>
